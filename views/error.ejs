<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #0B192C;
            color: white;
        }

        .navbar,
        .footer {
            color: white;
        }

        .footer a {
            color: white;
            text-decoration: none;
        }

        .user-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .total-price {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .form-input {
            max-width: 300px;
        }

        .input-form {
            display: flex;
            align-items: center;
        }

        .input-form input {
            margin-right: 10px;
        }

        .total-display {
            text-align: right;
            max-width: 200px;
        }

        .price-row {
            display: flex;
            justify-content: space-between;
            padding: 5px 0;
        }

        .form-container {
            display: flex;
            justify-content: center;
        }

        .total-price-container {
            margin-top: 20px;
        }

        .error-message {
            color: white;
            background-color: #dc3545;
            padding: 20px;
            border-radius: 8px;
            margin: 20px auto;
            text-align: center;
            max-width: 600px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: white;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 18px;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            color: white;
        }

        .text-center {
            text-align: center;
        }

        /* Responsive adjustments */
        @media (max-width: 576px) {
            .total-display {
                text-align: left;
                max-width: 100%;
            }

            .price-row {
                flex-direction: column;
                align-items: flex-start;
            }

            .error-message {
                max-width: 100%;
            }

            .form-input {
                max-width: 100%;
            }

            .total-price {
                font-size: 1.2rem;
            }

            .navbar-brand {
                font-size: 1rem;
            }

            .navbar-toggler {
                margin-left: auto;
            }

            .footer {
                font-size: 0.9rem;
            }
        }

        @media (min-width: 992px) {
            .form-input {
                max-width: 400px;
            }

            .total-display {
                max-width: 250px;
            }
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fas fa-coins"></i> Expense Tracker
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Error Message Section -->
    <div class="container mt-4">
        <% if (message) { %>
            <div class="error-message">
                <h4>Error!</h4>
                <p><%= message %></p>
            </div>
        <% } %>
        <!-- Styled button -->
        <div class="text-center mt-3">
            <a href="/track" class="btn btn-primary btn-lg">
                <i class="fas fa-home"></i> Go back to Home
            </a>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer text-center text-lg-start mt-5">
        <div class="text-center p-3">
            <a href="https://www.linkedin.com/in/ashutosh-gupta-198380261/" target="_blank" class="text me-3">
                <i class="fab fa-linkedin"></i> LinkedIn
            </a>
            made by ashutosh gupta
        </div>
    </footer>

</body>

</html>
