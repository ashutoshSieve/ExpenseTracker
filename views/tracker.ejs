<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #0B192C;
            color: white;
        }

        .navbar,
        .footer {
            color: white;
        }

        .footer a {
            color: white;
            text-decoration: none;
        }

        .user-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .total-price {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .form-input {
            max-width: 300px;
        }

        /* Custom styles for form and display */
        .input-form {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .input-form input {
            margin-right: 10px;
        }

        .total-display {
            text-align: center;
            max-width: 200px;
            margin: auto;
        }

        .price-row {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
        }

        .form-container {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
        }

        .total-price-container {
            margin-top: 20px;
        }

        /* Increased font size for item display */
        .display-items p {
            font-size: 1.2rem;
            margin-bottom: 10px;
        }

        .item-price {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-bottom: 10px;
        }

        @media (max-width: 576px) {
            .total-display {
                text-align: center;
                max-width: 100%;
            }

            .price-row {
                flex-direction: column;
                align-items: center;
            }

            .input-form {
                flex-direction: column;
                align-items: center;
            }

            .input-form input {
                margin-bottom: 10px;
                width: 100%;
            }

            .total-price {
                font-size: 1.2rem;
            }

            .display-items {
                display: flex;
                flex-direction: column;
                align-items: center;
                margin-top: 20px; /* Separation between Total Expand and Display Items */
            }

            .total-price-container {
                text-align: center;
                margin-top: 40px; /* More margin between Total Expand and Display Items */
            }
        }

        @media (min-width: 992px) {
            .form-input {
                max-width: 400px;
            }

            .total-display {
                max-width: 250px;
            }
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="fas fa-coins"></i> Expense Tracker
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Date Display -->
    <h2 class="text-center mt-3"><%= date %></h2>

    <!-- User Icon -->
    <div class="container mt-3">
        <div class="d-flex align-items-center justify-content-center">
            <h6 class="text-white">Welcome, <%= user %></h6>
        </div>
    </div>

    <!-- Search Bar and Input Form -->
    <div class="container mt-4">
        <div class="row">
            <div class="col text-center">
                <form action="/search" method="post" class="input-group mb-3 w-50 mx-auto">
                    <input type="text" class="form-control" placeholder="Saturday, October 5" aria-label="Search" name="search" required>
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </form>
            </div>
        </div>

        <!-- Centered Container -->
        <div class="row mt-4 form-container">
            <div class="col-md-5">
                <h5 class="text-center">Add Item</h5>

                <!-- Populate the form with item and price values if available -->
                <form class="input-form" action="/additems" method="post">
                    <input type="text" class="form-control form-input" placeholder="Item Name" aria-label="Item Name" name="item" value="<%= typeof ele !== 'undefined' ? ele.item : '' %>" required>
                    <input type="text" class="form-control form-input" placeholder="Price ₹" aria-label="Price" name="price" value="<%= typeof ele !== 'undefined' ? ele.price : '' %>" required>
                    <button class="btn btn-primary">Add</button>
                </form>

                <div class="display-items mt-3">
                    <% content.forEach(ele => { %>
                        <form action="/delete" method="post">
                            <div class="item-price">
                                <p class="mb-0" style="margin-right: 10px; white-space: normal;"><%= ele.item %></p>
                                <p class="mb-0" style="white-space: nowrap;"><%= ele.price %> ₹</p>
                                <input type="checkbox" name="checkbox" value="<%= ele._id %>" onChange='submit();' class="ms-2">
                            </div>
                            <input type="hidden" name="page" value="<%= date %>">
                        </form>
                    <% }); %>
                </div>
            </div>
            <div class="col-md-7 total-display total-price-container">
                <h5 class="text-center">Total Expenses</h5>
                <% const day = ['Today', 'ThisWeek', 'ThisMonth', 'AllTotal'] %>
                <% for (let i = 0; i < 4; ++i) { %>
                    <div class="price-row">
                        <span><%= day[i] %> :</span>
                        <span class="total-price" id="daily-price"><%= data[i] %> ₹</span>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer text-center text-lg-start mt-5">
        <div class="text-center p-3">
            <a href="https://www.linkedin.com/in/ashutosh-gupta-198380261/" target="_blank" class="text me-3">
                <i class="fab fa-linkedin"></i> LinkedIn
            </a>
            made by Ashutosh Gupta
        </div>
    </footer>

    <script src="/docs/5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>
